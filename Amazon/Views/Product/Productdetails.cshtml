@model AmazonModel.Models.StoreProductsModel

<div class="container " style="width:400px;height:300px">
    <div class="card bg-dark m-sm-2" style="width: 100%;">
    <img class="card-img-top bg-light" src="@Model.url" style="width:100%;height:250px;" alt="Card image cap">
    <div class="card-body">
        @using System.Globalization;
        <a asp-action="ProductDetails" asp-controller="Product" asp-route-id="@Model.ProductID"> <h5 class="card-title text-light">@Model.ProductName</h5></a>
        <p class="card-text text-light">@string.Format(new CultureInfo("en-IN"), "{0:c}", Model.Price)</p>
        <div>
                <a asp-action="" asp-controller="Product" class="btn btn-warning">Buy Now</a>
                <a asp-action="" asp-controller="Product" class="btn btn-success">Add To Cart</a>
                <a asp-action="GetAllProduct" asp-controller="Product" class="btn btn-danger">ToProducts</a>
        </div>

    </div>

</div>
</div>
