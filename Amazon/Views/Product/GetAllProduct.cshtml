@model List<AmazonModel.Models.StoreProductsModel>


    <div class="container-fluid  m-sm-5">
        <a asp-action="AddProduct" asp-controller="Product" class="btn btn-dark" style="margin-left:1150px">Add Product</a>
        <div class="d-flex flex-row justify-content-sm-between align-items-center flex-sm-wrap">
            @foreach(var product in Model)
            {
            
        
                <div class="card bg-dark m-sm-2" style="width: 18rem;">
                 <img class="card-img-top bg-light" src="@product.url" style="width:100%;height:250px;"alt="Card image cap">
                   <div class="card-body">
                       @using System.Globalization;
                    <a  asp-action="ProductDetails" asp-controller="Product" asp-route-id="@product.ProductID"> <h5 class="card-title text-light">@product.ProductName</h5></a>
                    <p class="card-text text-light">@string.Format(new CultureInfo("en-IN"), "{0:c}", product.Price)</p>
                    <div>
                        <a asp-action="CartDetails" asp-controller="Cart" asp-route-id="@product.ProductID" class="btn btn-warning">Buy Now</a>
                        <a asp-action="AddTocart" asp-controller="" class="btn btn-success">Add To Cart</a>
                    </div>
                         
                    </div>
                </div>
            }
        </div>

       

    </div>